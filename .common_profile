## Functions

# Edit and load ~/.common_profile
pref () {
    nano ~/.common_profile
    source ~/.common_profile
}

# Move and create a symlink for a file
mvln () {
    mv $1 $2
    ln -s $2 $1
}

# CS2200 shortcut for assembling a file
rama () {
    local CLEAN=false
    local ISA=rama2200
    local OPTIONS=""
    OPTIND=1
    while getopts "chi:s" option; do
        case $option in
            c)
                CLEAN=true
                ;;
            h)
                OPTIONS+="--hex "
                ;;
            i)
                ISA=$OPTARG
                ;;
            s)
                OPTIONS+="--sym "
                ;;
        esac
    done
    shift $((OPTIND - 1))
    OPTIND=1
    if [ $CLEAN == "true" ]; then
        rm -f $1.bin
        rm -f $1.sym
        rm -f $1.hex
        return
    fi
    python3 assembler.py -i $ISA $OPTIONS $1.s
}
